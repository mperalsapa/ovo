package page

import "ovo-server/internal/template/shared"
import "ovo-server/internal/router"

type HomePageData struct {
	Username string
}

templ HomePage(pageData HomePageData) {
	@shared.Page("Home") {
		<div>
			<h1>Home</h1>
			<p>Welcome to the home page: { pageData.Username }</p>
			<ul>
				<li></li>
				<a href={ templ.SafeURL(router.AdminRoutes.Dashboard) }>Admin Panel</a>
				<li></li>
				<a href={ templ.SafeURL(router.Routes.Logout) }>Logout</a>
			</ul>
		</div>
	}
}
